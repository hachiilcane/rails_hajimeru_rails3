<h1><%= @book.title %><h1/>

<% if @book.category %>
<div id="book_category" style="color: <%= @book.category.color %>"><%= @book.category.name %></div>
<% end %>

<ul>
  <li><%= @book.authors %></li>
  <li><%= @book.publish_year %></li>
  <li><%= simple_format(@book.comment) %></li>
</ul>

<%= link_to "Go list", :books %>
